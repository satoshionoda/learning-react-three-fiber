---
interface Props {
  title: string;
  bgColor: string;
  fgColor: string;
}

const { title, bgColor = "#202020", fgColor = "#fff" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="root"><slot /></div>
  </body>
</html>
<style is:global define:vars={{ fgColor, bgColor }}>
  * {
    box-sizing: border-box;
  }

  html,
  body,
  #root {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
  }

  body {
    background: var(--bgColor);
    color: var(--fgColor);
  }
</style>
